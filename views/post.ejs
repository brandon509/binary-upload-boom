<%- include('partials/header', {loggedUser: user.id}) -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <a href="/profile/<%= post.user%>">
        <h2><%= postUser.userName %></h2>
      </a>
      <img class="img-fluid" src="<%= post.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
        <%if(post.likedBy.includes(user.id)){ %>
          <button class="btn btn-success fa fa-heart" type="submit"></button>
          <% } else{ %>
            <button class="btn btn-primary fa fa-heart" type="submit"></button>
          <% } %>
        </form>
        <% if(post.likes > 0){ %>
          <h3 class="col-5 fs-6">Liked by <strong> <%= likedByUsers[likedByUsers.length-1]%> <%if(post.likes > 1){%> </strong> and <strong><%= post.likes - 1 %> </strong> <%if(post.likes == 2){%> other <% }else{%> others <% } %> <% } %></h3>
        <% } %>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-2"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= post.caption %></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile/<%= user.id%>">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
